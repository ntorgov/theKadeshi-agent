<?xml version="1.0" encoding="UTF-8"?>
<engine>
    <name>Bitrix</name>
    <rules>
        <rule>
            <step>1</step>
            <path>/</path>
            <method>content</method>
            <regexp><![CDATA[#<(a|link).*href=\".*\/(bitrix\/(admin|templates|cache)\/).*\".*>#iuU]]></regexp>
            <weight>0.5</weight>
        </rule>
        <rule>
            <step>2</step>
            <path>/bitrix/admin/</path>
            <method>content</method>
            <regexp><![CDATA[#<a href=\"http:\/\/(www.1c-bitrix.ru)\/">.*<\/a>#iuU]]></regexp>
            <weight>1</weight>
        </rule>
    </rules>
</engine>